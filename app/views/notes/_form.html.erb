<%= form_with(model: note, class: "contents") do |form| %>
  <% if note.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
        <% note.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-2 ">
   
    <%= form.text_field :title,  placeholder:"Give your note a name..." , class: "bg-bgcolor rounded-md ring-0  font-light font-nunito px-3 py-2 mt-2 w-full"  %>
  </div>

  <div class="my-4">
    
    <%= form.rich_text_area :content, style:"height:300px " %>
  </div>
  

  <div class="inline">
    <%= form.submit "Save note", class: "  w-full font-nunito rounded-lg py-3 px-5 bg-buttoncolor text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>




